{
  "Routes": [
    // Marketplace trend reports
    {
      "UpstreamHttpMethod": [
        "GET"
      ],
      "UpstreamPathTemplate": "/marketplace/trends",
      "DownstreamPathTemplate": "/trends",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5003
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "cognito/groups": [
          "Admins",
          "Viewers"
        ]
      }
    },
    // Marketplace jobs
    {
      "UpstreamHttpMethod": [
        "POST"
      ],
      "UpstreamPathTemplate": "/marketplace/jobs/start",
      "DownstreamPathTemplate": "/jobs/start",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5003
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "cognito/groups": "Admins"
      }
    },
    // Performance jobs
    {
      "UpstreamHttpMethod": [
        "POST"
      ],
      "UpstreamPathTemplate": "/performance/jobs/start",
      "DownstreamPathTemplate": "/jobs/start",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "cognito/groups": "Admins"
      }
    },
    // Players jobs
    {
      "UpstreamHttpMethod": [
        "POST"
      ],
      "UpstreamPathTemplate": "/players/jobs/start",
      "DownstreamPathTemplate": "/jobs/start",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "cognito/groups": "Admins"
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5000"
  }
}